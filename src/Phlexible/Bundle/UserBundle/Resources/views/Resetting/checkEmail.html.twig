{% extends "PhlexibleUserBundle::layout.html.twig" %}

{% block phlexible_user_content %}
    <script type="text/javascript">
        //<![CDATA[
        Ext.onReady(function () {
            win = new Phlexible.users.security.SendEmailWindow({
                title: "{{ project.title }}",
                loginUrl: "{{ path("fos_user_security_login") }}",
                backToLoginText: "{{ 'login.back_to_login'|trans({}, 'PhlexibleUserBundle') }}",
                checkEmail: true,
                checkEmailText: "{{ 'resetting.check_email'|trans({'%tokenLifetime%': tokenLifetime}, 'PhlexibleUserBundle') }}"
            });
            win.show();
        });
        //]]>
    </script>
{% endblock %}
