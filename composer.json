{
    "name": "phlexible/phlexible",
    "description": "phlexible",
    "license": "proprietary",
    "type": "symfony-bundle",
    "keywords": ["phlexible"],
    "autoload": {
        "psr-4": {
            "Phlexible\\": "src/Phlexible/"
        }
    },
    "require": {
        "php": ">=5.4.0",
        "ext-date": "*",
        "ext-hash": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pcre": "*",
        "ext-session": "*",
        "ext-simplexml": "*",
        "ext-zip": "*",
        "puli/cli": "~1.0",
        "puli/twig-extension": "~1.0",
        "puli/symfony-bundle": "~1.0",
        "zf1/zend-search-lucene": "~1.12",
        "doctrine/orm": "~2.4",
        "fluentdom/fluentdom": "~5.1",
        "friendsofsymfony/user-bundle": "~1.3",
        "symfony/symfony": "~2.4",
        "symfony-cmf/routing-bundle": "~1.1",
        "twig/twig": "~1.15",
        "temp/mime-sniffer": "~1.0",
        "temp/image-analyzer": "~1.0",
        "temp/media-classifier": "~1.0",
        "temp/meta-reader": "~1.0",
        "php-poppler/php-poppler": "~1.0",
        "imagine/imagine": "~0.6",
        "ramsey/uuid": "~2.7",
        "php-ffmpeg/php-ffmpeg": "~0.5",
        "php-ffmpeg/extras": "~0.3",
        "igorw/file-serve-bundle": "~1",
        "cocur/slugify": "~0.8",
        "phpexiftool/phpexiftool": "~0.4",
        "cogpowered/finediff": "~0.3",
        "nelmio/api-doc-bundle": "~2.5"
    },
     "replace": {
        "phlexible/dashboard-bundle": "self.version",
        "phlexible/gui-bundle": "self.version",
        "phlexible/queue-bundle": "self.version",
        "phlexible/user-bundle": "self.version"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5",
        "mikey179/vfsStream": "~1.4",
        "sami/sami": "~2.0"
    },
    "suggest": {
        "puli/composer-plugin": "This package contains Puli resources. Require the plugin to use them.",
        "phlexible/compressor-minify-bundle": "Compress javascript and css files."
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.brainbits.net/repo/private/",
            "options": {
                "ssl": {
                    "allow_self_signed": "true"
                }
            }
        }
    ],
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
